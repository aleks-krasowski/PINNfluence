Bootstrap: docker
From: python:3.12.8

%environment
    export DDE_BACKEND=pytorch

%post
    pip install torch --index-url https://download.pytorch.org/whl/cpu --upgrade
    pip install git+https://github.com/aleks-krasowski/deepxde.git
    pip install git+https://github.com/aleks-krasowski/captum.git
    pip install natsort pandas

%runscript
    cd /opt/code
    python "$@"
